<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>


<?import javafx.geometry.Insets?>
<BorderPane prefHeight="564.0" prefWidth="911.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.tudelft.oopp.demo.controllers.AdminManageRoomViewController">
    <bottom>
        <HBox alignment="CENTER" prefHeight="78.0" prefWidth="911.0" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#createNewRoomClicked" prefHeight="35.0" prefWidth="93.0" text="New" textFill="#0ebaf8">
                    <HBox.margin>
                        <Insets right="20.0" />
                    </HBox.margin>
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#editRoomClicked" prefHeight="35.0" prefWidth="95.0" text="Edit" textFill="#0ebaf8">
                    <HBox.margin>
                        <Insets right="20.0" />
                    </HBox.margin>
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#deleteRoomClicked" prefHeight="35.0" prefWidth="87.0" text="Delete" textFill="#0ebaf8">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <HBox.margin>
                        <Insets right="20.0" />
                    </HBox.margin>
                </Button>
                <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#backClicked" onMouseClicked="#backClicked" prefHeight="35.0" prefWidth="93.0" text="Back" textFill="#0ebaf8">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>
    <center>
        <TableView fx:id="roomTable" prefHeight="500.0" prefWidth="900.0" tableMenuButtonVisible="true" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="roomIdColumn" maxWidth="50.0" minWidth="30.0" prefWidth="40.0" text="ID" />
                <TableColumn fx:id="roomNameColumn" maxWidth="100.0" minWidth="80.0" prefWidth="90.0" text="Name" />
                <TableColumn fx:id="roomBuildingColumn" maxWidth="90.0" minWidth="70.0" prefWidth="70.0" text="Building" />
                <TableColumn fx:id="roomOnlyTeachersColumn" maxWidth="100.0" minWidth="90.0" prefWidth="90.0" text="Only teachers" />
            <TableColumn fx:id="roomCapacityBuilding" maxWidth="100.0" minWidth="80.0" text="Capacity" />
            <TableColumn fx:id="roomPhotoColumn" maxWidth="230.0" minWidth="150.0" prefWidth="100.0" text="Photo URL" />
            <TableColumn fx:id="roomTypeColumn" maxWidth="180.0" minWidth="149.0" prefWidth="150.0" text="Type" />
            <TableColumn fx:id="roomDescriptionColumn" minWidth="150.0" prefWidth="150.0" text="Description" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <top>
        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="54.0" prefWidth="150.0" text="Rooms" textAlignment="CENTER" textFill="#0ebaf8" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
    </top>
</BorderPane>
